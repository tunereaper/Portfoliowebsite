// Research Carousel Initialization
(function($) {
	const $carousel = $('.research-carousel');
	
	$carousel.owlCarousel({
		loop: false,
		margin: 30,
		nav: true,
		navText: ['<span>‹</span>', '<span>›</span>'],
		dots: true,
		autoplay: false,
		autoplayTimeout: 5000,
		autoplayHoverPause: true,
		touchDrag: true,
		mouseDrag: true,
		pullDrag: true,
		freeDrag: false,
		rewind: false,
		onInitialized: updateNavigationState,
		onTranslated: updateNavigationState,
		onChanged: updateNavigationState,
		responsive: {
			0: {
				items: 1,
				stagePadding: 0,
				margin: 8,
				touchDrag: true,
				slideBy: 1
			},
			480: {
				items: 1,
				stagePadding: 0,
				margin: 8,
				touchDrag: true,
				slideBy: 1
			},
			768: {
				items: 2,
				stagePadding: 0,
				margin: 30,
				slideBy: 2
			},
			1000: {
				items: 3,
				stagePadding: 0,
				margin: 30,
				slideBy: 1
			},
			1200: {
				items: 3,
				stagePadding: 0,
				margin: 30,
				slideBy: 1
			}
		}
	});

	// Function to update navigation button states
	function updateNavigationState(event) {
		if (!event.namespace) return;

		const carousel = event.relatedTarget;
		const element = event.target;
		const items = event.item.count;
		const current = event.item.index || 0;
		const size = carousel.settings.items || 1;
		const lastVisible = current + size;

		// Disable prev button at start
		$('.research-carousel .owl-prev').toggleClass('disabled', current === 0);

		// Disable next button when last item is fully visible
		$('.research-carousel .owl-next').toggleClass('disabled', lastVisible >= items);

		// Update dots to match current position
		$('.research-carousel .owl-dots .owl-dot').each(function(index) {
			$(this).toggleClass('active', index === Math.floor(current / size));
		});
	}

	// Handle manual dot clicks
	$('.research-carousel .owl-dot').on('click', function() {
		const index = $(this).index();
		const size = $carousel.data('owl.carousel').settings.items;
		$carousel.trigger('to.owl.carousel', [index * size, 300]);
	});
})(jQuery);
